{
  "version":"2.0.0",
  "tasks":[
    {
        "label":"compile",
         "type": "shell",
         "command":"g++",
         "args": [
            "--std=c++17",
            "-o",
            "${fileBasenameNoExtension}",
            "${file}"
         ],
         "group": {
            "kind": "build",
            "isDefault": true
         }
    }, 
    {
        "label":"compile and run",
        "type":"shell", 
        "command":"g++ -std=c++17 -o${fileBasenameNoExtension}",
        "group": {
            "kind": "build",
            "isDefault": true
        }
    }
  ]   
}